{
  "name": "wise_rock",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc && npm install && prisma generate --schema=./backend/prisma/schema.prisma && npm install --prefix frontend && npm run build --prefix frontend",
    "start:prod": "node backend/dist/src/app.js",
    "clear:build": "rimraf ./backend/dist",
    "lint": "eslint",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check",
    "build:watch": "tsc --watch",
    "build:dev-js": "nodemon backend/dist/src/app.js",
    "start:dev": "cross-env NODE_ENV=development concurrently \"npm:build:*\"",
    "start:production-js": "cross-env NODE_ENV=production node backend/src/app.js",
    "start:development-js": "cross-env NODE_ENV=development node backend/dist/src/app.js",
    "dev:backend": "nodemon --watch backend/src --exec ts-node backend/src/app.ts",
    "dev:frontend": "npm run dev --prefix frontend",
    "fullstack": "concurrently \"npm:dev:*\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.4.1",
    "@types/validator": "^13.12.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "check-password-strength": "^2.0.10",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prisma": "^5.22.0",
    "reflect-metadata": "^0.2.2",
    "socket-controllers": "^0.3.1",
    "socket.io": "^4.7.5",
    "typedi": "^0.10.0",
    "validator": "^13.12.0",
    "winston": "^3.14.2"
  }
}
